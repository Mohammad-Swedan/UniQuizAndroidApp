<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewMaterial"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeWidth="1dp"
    android:layout_marginTop="12dp"
    app:strokeColor="@color/light_blue"
    android:backgroundTint="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Material Name -->
        <TextView
            android:id="@+id/textViewMaterialName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Material Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/dark_blue"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Faculty ID -->
        <TextView
            android:id="@+id/textViewFacultyID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Faculty ID: 123"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/textViewMaterialName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Divider -->
        <View
            android:id="@+id/divider_material"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/light_blue"
            app:layout_constraintTop_toBottomOf="@id/textViewFacultyID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Created At -->
        <TextView
            android:id="@+id/textViewCreatedAtMaterial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created At: Date"
            android:textSize="14sp"
            android:textColor="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/divider_material"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Action Button -->
        <Button
            android:id="@+id/buttonViewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Quizzes"
            android:textColor="@color/white"
            android:backgroundTint="@color/dark_blue"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            app:cornerRadius="24dp"
            app:layout_constraintTop_toBottomOf="@id/textViewCreatedAtMaterial"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
