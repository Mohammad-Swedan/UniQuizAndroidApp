<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/test_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Material Name -->
    <TextView
        android:id="@+id/textViewMaterialName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Material Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <!-- No Quizzes Message -->
    <TextView
        android:id="@+id/textViewNoQuizzes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No quiz added yet"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <!-- RecyclerView for Quizzes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewQuizzes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textViewMaterialName"
        android:layout_marginTop="16dp"/>

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBarQuizzes"
        style="?android:attr/progressBarStyleLarge"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
